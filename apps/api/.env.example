# Database Configuration
# For development: SQLite (default)
DATABASE_URL="file:./prisma/dev.db"

# For production: PostgreSQL (recommended)
# DATABASE_URL="postgresql://username:password@localhost:5432/aipower?schema=public"

# Server Configuration
PORT=3001

# CORS - Allowed origins (comma-separated)
# Development: http://localhost:3000
# Production: Add your production domain
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Email Configuration (for notifications)
# SMTP settings for sending appointment confirmations
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="AI Power Mobile Tire Service <noreply@aipower.com>"

# Application URLs
APP_URL="http://localhost:3001"
WEB_URL="http://localhost:3000"

# Security
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
SESSION_SECRET="your-super-secret-session-key-change-in-production"

# Environment
NODE_ENV="development"
